@page
@model PoyectoPokedexApi.Pages.Pokemon.UsuariosModel
@{
    ViewData["Title"] = "lista de Usuario";
}

<style>
    .text-orange-dark {
        color: #DD8F00; /* Anaranjado oscuro */
    }
</style>

<h3 class="text-orange-dark">Lista de usuarios</h3>

<table class="table table-striped table-hover">
    <thead>
        <tr class="table">
            <th scope="col" class="col-4 ">Pokemon</th>
            <th scope="col" class="col-6 ">Dueño</th>
            <th scope="col" class="col-2 ">Acciones</th>
        </tr>
    </thead>

    <tbody id="usuarioPkmTableBody">
        <!-- aqui se van a cargar los datos con Js -->
    </tbody>
</table>



<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Función para obtener los usuarios desde la API
        fetch('https://localhost:7068/Api_Pdx_DbV2/Usuario/VistaUsuariosRoles') // El endpoint de tu API
            .then(response => response.json())
            .then(data => {
                let tableBody = document.getElementById('usuarioPkmTableBody');
                tableBody.innerHTML = ''; // Limpiar tabla antes de agregar datos

                // Recorrer los datos y agregar filas a la tabla
                data.forEach(usuario => {
                    let row = document.createElement('tr');
                    row.innerHTML = `
                        <td>${usuario.nombre}</td>
                        <td>${usuario.userName}</td>
                        <td>
                            <button class="btn btn-info">Editar</button>
                            <button class="btn btn-danger">Eliminar</button>
                        </td>
                    `;
                    tableBody.appendChild(row);
                });
            })
            .catch(error => {
                console.error('Error al cargar los datos:', error);
                alert('Error al cargar los datos de los usuarios');
            });
    });
</script>