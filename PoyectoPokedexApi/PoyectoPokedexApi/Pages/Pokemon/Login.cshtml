@page
@model PoyectoPokedexApi.Pages.Pokemon.LoginModel

<h2>Iniciar sesión</h2>

<!-- Mostrar mensaje de éxito o error -->
@if (!string.IsNullOrEmpty(Model.MensajeLogin))
{
    <div class="alert alert-info">
        @Model.MensajeLogin
    </div>
}

<!-- Formulario de inicio de sesión -->
<div class="row justify-content-center">
    <div class="col-md-7">
        <form method="post">
            <div class="form-group my-2">
                <label for="userName">Usuario</label>
                <input type="text" id="userName" class="form-control" asp-for="Login.UserName" />
                <span asp-validation-for="Login.UserName" class="text-danger"></span>
            </div>

            <div class="form-group my-2">
                <label for="pass">Contraseña</label>
                <input type="password" id="pass" class="form-control" asp-for="Login.Password" />
                <span asp-validation-for="Login.Password" class="text-danger"></span>
            </div>

            <div class="form-group my-2">
                <button type="submit" class="btn btn-primary">Iniciar sesión</button>
            </div>
        </form>
    </div>
</div>


<!-- Agregar validación del cliente (esto es opcional, pero mejora la experiencia de usuario) -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}





