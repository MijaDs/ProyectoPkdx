@page
@model PoyectoPokedexApi.Pages.Pokemon.RegistroModel
@{
    ViewData["Title"] = "Registro de Usuario";
}

<h2>Registro de Usuario</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Login.UserName" class="control-label"></label>
        <input asp-for="Login.UserName" class="form-control" />
        <span asp-validation-for="Login.UserName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Login.Password" class="control-label"></label>
        <input asp-for="Login.Password" class="form-control" type="password" />
        <span asp-validation-for="Login.Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Registrar</button>
    </div>
</form>

@if (!string.IsNullOrEmpty(Model.MensajeLogin))
{
    <div class="alert alert-info">@Model.MensajeLogin</div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}