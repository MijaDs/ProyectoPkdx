@page
@model PoyectoPokedexApi.Pages.Pokemon.RegistroModel

<div class="container text-center mt-5">
    <h1 class="text-primary">Pokemasters</h1>

    <h2 class="text-warning mt-4">REGÍSTRATE</h2>
    <h3 class="mt-2">PARA INICIAR TU CARRERA A POKEMASTER</h3>

    <form method="post" asp-action="Registro" class="mt-4">
        <div class="form-group">
            <input type="text" class="form-control mb-3" id="Nombre" name="Nombre" asp-for="Usuario.Nombre" placeholder="Nombre" required />
            <span asp-validation-for="Usuario.Nombre" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="text" class="form-control mb-3" id="UserName" name="UserName" asp-for="Usuario.UserName" placeholder="Nombre de Usuario" required />
            <span asp-validation-for="Usuario.UserName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="password" class="form-control mb-3" id="Pass" name="Pass" asp-for="Usuario.Pass" placeholder="Contraseña" required />
            <span asp-validation-for="Usuario.Pass" class="text-danger"></span>
        </div>
        <div class="form-group">
            <p>¿Ya tienes una <a href="/Login" class="text-decoration-none text-primary">cuenta?</a></p>
        </div>
        <button type="submit" class="btn btn-primary btn-lg w-100">REGISTRARSE</button>
    </form>

    @if (!string.IsNullOrEmpty(Model.MensajeRegistro))
    {
        <div class="alert alert-info mt-3">
            @Model.MensajeRegistro
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
