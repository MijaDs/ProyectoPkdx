@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Inicio - Pokemasters</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" integrity="sha384-..." crossorigin="anonymous">

    <!-- Estilos personalizados -->
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            color: #000000; /* Negro Texto */
        }
        h1, h2, h3, h4, h5, h6 {
            color: #FF9500; /* Naranja Subtitulos */
            font-family: 'Pokemon Classic', sans-serif;
        }
        .navbar-brand {
            font-family: 'Pokemon Solid', sans-serif;
            font-size: 1.5rem;
            color: #000000 !important;
        }
        .divider {
            background-color: #D9D9D9; /* Color Acentos Divisores */
        }
        .btn-custom {
            background-color: #5B86E5; /* Color Botones */
            color: #fff;
            border-radius: 4px;
        }
        .subtitle-secondary {
            color: #DD8F00; /* Naranja Subtitulos Secundario */
        }
    </style>
</head>
<body>
    <main class="container py-5">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="mb-3">DEMUESTRA SI<br>ERES UN POKEMASTER</h1>
                <p class="mb-4">Lucha contra otros entrenadores y captura a todos los Pokémon</p>
                <a href="/Empezar" class="btn btn-custom px-4 py-2">EMPIEZA HOY</a>
            </div>
            <div class="col-md-6 text-center">
                <!-- Ajusta la ruta de la imagen de Pikachu -->
                <img src="~/images/pikachu.png" alt="Pikachu" class="img-fluid" style="max-width:300px;" />
            </div>
        </div>
    </main>
    <footer class="text-center py-3" style="font-size:0.9em; color:#666;">
        ©2024 Pokemasters - Todos los derechos reservados.
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-..." crossorigin="anonymous"></script>
</body>
</html>
